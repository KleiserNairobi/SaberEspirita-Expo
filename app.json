{
  "expo": {
    "name": "Saber Espírita",
    "slug": "saber-espirita",
    "scheme": "saber-espirita",
    "version": "2.0.0",
    "orientation": "portrait",
    "newArchEnabled": true,
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/icon.png",

    "ios": {
      "buildNumber": "27",
      "supportsTablet": false,
      "bundleIdentifier": "app.saberespirita",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSLocationWhenInUseUsageDescription": "Permita sua localização em uso para receber notificações personalizadas sobre o Saber Espírita."
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.security.application-groups": ["group.app.saberespirita.onesignal"]
      }
    },

    "android": {
      "versionCode": 27,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "app.saberespirita",
      "softwareKeyboardLayoutMode": "pan",
      "permissions": ["com.google.android.gms.permission.AD_ID"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },

    "plugins": [
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#F2F7F2",
          "image": "./assets/images/splash-icon.png",
          "resizeMode": "contain",
          "dark": {
            "backgroundColor": "#121E31",
            "image": "./assets/images/splash-icon.png"
          }
        }
      ],
      [
        "onesignal-expo-plugin",
        {
          "mode": "production"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesGoogleServices": true
          }
        }
      ],
      "./dev/scripts/withAndroidForegroundPermissions.js",
      "expo-font",
      "expo-audio",
      "expo-web-browser"
    ]
  }
}
